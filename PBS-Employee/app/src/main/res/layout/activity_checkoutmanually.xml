<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mytrintrin.com.pbs_employee.checkoutmanually"
    android:orientation="vertical">

<!--Check out manually layout-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

     <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dockingstationmanualspinner"
         />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/holdingareaspinner"
            android:visibility="gone"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/redistubutionspinner"
            android:visibility="gone"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/maintenancespinner"
            android:visibility="gone"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/checkoutmanualcardid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#009746">

            <EditText
                android:id="@+id/etcheckoutmanualcardid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Card ID"
                android:textColor="#009746"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/checkoutmanualcycleid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#009746">

            <EditText
                android:id="@+id/etcheckoutmanualcycleid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Cycle ID"
                android:textColor="#009746"/>
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/checkoutmanualportid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#009746">

            <EditText
                android:id="@+id/etcheckoutmanualportid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Port ID"
                android:textColor="#009746"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Out"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:textColor="#fff"
            android:background="#009746"
            android:onClick="getdetailsofcheckout"/>



    </LinearLayout>

<!--Ends-->

</LinearLayout>
