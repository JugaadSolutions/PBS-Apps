<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingLeft="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/image"
            android:orientation="vertical"
            android:layout_margin="6dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invoice No "
                android:textStyle="bold"
                android:textColor="#6b6b6b"
                android:textSize="16sp"
                android:id="@+id/invoice_tv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Mode "
                android:textStyle="bold"
                android:textColor="#6b6b6b"
                android:textSize="16sp"
                android:layout_below="@+id/invoice_tv"
                android:id="@+id/paymentmode_tv"/>

            <TextView
                android:id="@+id/payment"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_below="@+id/invoiceno"
                android:textSize="16sp"
                android:textColor="#9b9b9b"
                tools:text="Credit Card"
                android:layout_toRightOf="@+id/paymentmode_tv"
                android:layout_toEndOf="@+id/paymentmode_tv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_below="@+id/payment"
                android:textSize="16sp"
                tools:text="20 July 2017"
                android:textColor="#9b9b9b"
                android:id="@+id/paymentdate"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/paidamount"
                android:layout_alignEnd="@+id/paidamount"
                android:layout_alignParentRight="true"
                android:id="@+id/textView2"
                android:layout_alignBaseline="@+id/paidamount"
                android:textColor="#6b6b6b"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit"
                android:textColor="#6b6b6b"
                android:textSize="15sp"
                android:id="@+id/creditordebit_tv"
                android:layout_below="@+id/paidamount"
                android:layout_alignRight="@+id/paidamount"
                android:layout_alignEnd="@+id/paidamount"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="21dp"
                android:text="50"
                android:textColor="#6b6b6b"
                android:id="@+id/paidamount"
                android:textSize="35sp"
                android:layout_below="@+id/invoiceno"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_alignBaseline="@+id/payment"/>

            <TextView
                android:id="@+id/invoiceno"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:textSize="16sp"
                android:textColor="#9b9b9b"
                tools:text="PBS12345678"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/invoice_tv"
                android:layout_toEndOf="@+id/invoice_tv" />

            <!-- android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_centerVertical="true"-->


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>