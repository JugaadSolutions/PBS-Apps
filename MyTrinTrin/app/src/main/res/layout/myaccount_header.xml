<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/coverpic"
    android:orientation="vertical"
    android:padding="8dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userprofilepic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:paddingTop="16dp"
            android:src="@drawable/trintrinlogo"
            />
        <!--android:onClick="choosepicturefrom"-->

        <ImageView
            android:id="@+id/userprofileedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:src="@mipmap/ic_edit_white_24dp"
            android:onClick="editprofile"
            android:layout_gravity="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>

    </RelativeLayout>



    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:text="User Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardnumofuser"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>



    <TextView
        android:id="@+id/usermailid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@gmail.com" />

</LinearLayout>