<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/redistribution"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mytrintrin.www.pbs_trintrin.Redistribution"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/redistributionview">

       <android.support.v7.widget.Toolbar
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/redistributiontoolbar"
           android:theme="@style/customToolbartheme">

           <android.support.v7.widget.SwitchCompat
               android:id="@+id/switchButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="end"
               android:text="Tracker "
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:textColor="#fff"
               android:textStyle="bold"
               android:theme="@style/ToggleTheme" />

       </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/redistributionmainlayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/redistributionlayout"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/rvcheckout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundcorner"
                    android:text="Check out"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:onClick="checkoutfromrv"/>

                <Button
                    android:id="@+id/rvcheckin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/roundcorner"
                    android:text="Check in"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:onClick="checkintorv"
                    android:layout_marginRight="4dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

            <Button
                android:id="@+id/rvcylcleswithuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/roundcorner"
                android:text="Vehicle Postion"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:onClick="vehicleposition"
                android:visibility="visible"
                android:layout_marginRight="4dp"/>

                <Button
                    android:id="@+id/zonealert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/roundcorner"
                    android:text="Zone Alert"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:onClick="gotozonealert"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
